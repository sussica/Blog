<%- include('partial/header'); -%>

<h1>Home</h1>
<p><%= DisplayContent %></p>

<% newPosts.forEach(function(post){ %>
<h1><%= post.inputTitle %></h1>
<% if(post.inputPost.length <= 100){ %>
<p><%= post.inputPost %><a href="/posts/ <%= post.inputTitle %>"> Read More</a></p>
<% }else{ %>
<p><%= post.inputPost.substring(0, 100)+'...' %><a href="/posts/ <%= post.inputTitle %>"> Read More</a></p>
<% }}) %>


<%- include('partial/footer'); -%>
